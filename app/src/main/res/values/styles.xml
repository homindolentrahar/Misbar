<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius</item>
    </style>

    <style name="ItemTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/grotesk_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ItemTitle.CarouselItemTitle">
        <item name="android:maxLines">1</item>
    </style>

    <style name="ItemTitle.ListItemTitle">
        <item name="android:maxLines">2</item>
    </style>

    <style name="ItemSubtitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/grotesk_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemSubtitle.Bold">
        <item name="android:fontFamily">@font/grotesk_bold</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ChipTitle">
        <item name="android:fontFamily">@font/grotesk_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChipTitle.Primary">
        <item name="android:fontFamily">@font/grotesk_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipRating">
        <item name="android:textAppearance">@style/ChipTitle.Primary</item>
        <item name="android:fontFamily">@font/grotesk_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/small_spacing</item>
        <item name="chipBackgroundColor">@color/black</item>
        <item name="chipCornerRadius">@dimen/radius</item>
        <item name="chipIcon">@drawable/ic_rating</item>
        <item name="chipIconSize">10dp</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="iconEndPadding">@dimen/half_small_spacing</item>
        <item name="iconStartPadding">@dimen/small_spacing</item>
    </style>

    <style name="TabTitle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/grotesk_semibold</item>
    </style>

    <style name="Subheading">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/grotesk_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/grotesk_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/grotesk_medium</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="Detail3rdSubtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/grotesk_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Detail3rdSubtitle.Bold">
        <item name="android:fontFamily">@font/grotesk_bold</item>
    </style>

    <style name="DetailBody">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/grotesk_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/grotesk_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailInfo.Body">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/grotesk_medium</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="DetailInfo.AgeRating">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/grotesk_bold</item>
        <item name="android:textColor">@color/light</item>
    </style>

</resources>