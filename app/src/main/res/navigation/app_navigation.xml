<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.homindolentrahar.misbar.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_enter"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.homindolentrahar.misbar.ui.core.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_detailItemFragment"
            app:destination="@id/detailItemFragment"
            app:enterAnim="@anim/scale_enter"
            app:exitAnim="@anim/slide_exit"
            app:popEnterAnim="@anim/pop_slide_enter"
            app:popExitAnim="@anim/pop_scale_exit" />
    </fragment>
    <fragment
        android:id="@+id/detailItemFragment"
        android:name="com.homindolentrahar.misbar.ui.detail.DetailItemFragment"
        android:label="fragment_detail_item"
        tools:layout="@layout/fragment_detail_item" >
        <argument
            android:name="type"
            app:argType="string" />
        <argument
            android:name="itemId"
            app:argType="integer" />
    </fragment>
</navigation>